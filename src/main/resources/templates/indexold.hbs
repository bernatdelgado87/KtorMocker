{{> header}}
<h1 id="my">Categorías</h1>

<table class="table table-striped table-bordered">
    <thead>
    <th>id</th>
    <th>Titulo Categoría</th>
    <th>Imagen Categoría</th>
    <th>
        <button data-toggle="modal" data-target="#newElementModal" class="btn btn-info" onclick="dropData()">
            Nueva categoría
        </button>
    </th>
    </thead>

    {{#categories}}


        <img src="">
        <tr>
            <td>{{id}}</td>
            <td><a href="../exercise/?idCategory={{id}}">{{name.es}}</a></td>
            <td><img src='{{urlAbsolute}}'></td>
            <td id="editTd{{id}}">

<a href='deleteCategory/?idCategory={{id}}'>
                <button type='button' class='btn btn-danger'>Eliminar Categoría</button>
            </a></td>
        </tr>

        <script>
            var data{{id}} = {name: "{{name.es}}", id: "{{id}}"};
            var $button = "<button data-toggle='modal' data-target='#newElementModal' class='btn btn-success' data-target='#newElementModal' onclick='editData(data{{id}})'>Modificar Categoría</button>";
            $("#editTd{{id}}").append($button);

            function editData(obj) {
                document.getElementById("name_es").value = obj.name;
                document.getElementById("id_categoría").value = obj.id;
            }

            function dropData() {
                document.getElementById("name_es").value = "";
                document.getElementById("id_categoría").value = "";
            }

        </script>

    {{/categories}}

</table>

<!-- Modal -->

<div class="modal fade" id="newElementModal" tabindex="-1" role="dialog" aria-labelledby="Crear Elemento"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Nueva Categoría</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="createCategoryAction" method="POST" enctype="multipart/form-data">
                    <label>ID Categoría: AUTO-ASIGNADO </label>
                    <input type="hidden" id="id_categoría" name="id_categoría"/>
                    <br/>
                    <label>Titulo Categoría: </label>

                    <input type="text" name="name_es" id="name_es"/>

                    <br/>

                    <label>Imagen: </label>
                    <br/>
                    <input type="file" name="file1" id="file1">

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{> footer}}
