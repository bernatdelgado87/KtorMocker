    <script>
    function deleteMock(file) {
    var data = {"file": file};

    fetch('/delete', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
    })
    .then(response => {
        location.reload();
    })
    .then(json => console.log(json))
    .catch(error => console.error('Error:', error));
}

function listenId(id) {
    fetch(`/listen?id=${id}`, {
        method: 'GET',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => {
        location.reload();
    })
    .then(json => console.log(json))
    .catch(error => console.error('Error:', error));
}

function localMode(id){
